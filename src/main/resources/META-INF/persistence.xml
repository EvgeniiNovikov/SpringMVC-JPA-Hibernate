<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

            <persistence-unit name="pepsi" >
                <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
                <class>models.Address</class>
                <class>models.User</class>
                <class>models.Role</class>
                <properties>
                    <property name="hibernate.connection.driver" value="com.mysql.cj.jdbc.Driver"/>
                    <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/jpa"/>
                    <property name="hibernate.connection.username" value="root"/>
                    <property name="hibernate.connection.password" value="220028"/>
                    <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
                    <property name="hibernate.show_sql" value="true"/>
                    <property name="hibernate.hbm2ddl.auto" value="update"/>
                    <property name="hibernate.current_session_context_class" value="thread"/>
                </properties>
            </persistence-unit>
</persistence>
